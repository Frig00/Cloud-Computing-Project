{
  "compilerOptions": {
    "target": "ES2020",                // Choose the ECMAScript version you prefer
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,           // Required for Fastify imports
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                // Output folder for compiled files
    "rootDir": "./src"                 // Root directory of our TypeScript files
  },
  "include": ["src/**/*.ts"],          // Include all TypeScript files in src/
  "exclude": ["node_modules"]          // Exclude node_modules from compilation
}
